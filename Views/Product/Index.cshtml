@* Link đến file CSS (giả sử bạn có file wwwroot/css/styles.css) *@
<link href="~/css/product.css" rel="stylesheet" />

@model List<WebPhone.Models.Product>

<h1>Danh sách sản phẩm</h1>

<div class="row">
    @foreach (var product in Model)
    {
        <div class="col-md-4">
            <div class="product-card">
                <img src="@product.ImageUrl" class="card-img-top" alt="@product.Name">
                <div class="card-body">
                    <h5 class="product-title">@product.Name</h5>
                    <p class="product-description">@product.Description</p>
                    <p class="product-price">@product.Price.ToString("C")</p>
                    <a href="@Url.Action("AddToCart", "Product", new { productId = product.Id })" class="btn btn-primary add-to-cart">Thêm vào giỏ</a>
                </div>
            </div>
        </div>
    }
</div>
